/* pages/detail/detail.wxss */
.detail-image {
  width: 100%;
  height: 360rpx;
  border-radius: 24rpx;
  object-fit: cover;
  margin-bottom: 32rpx;
  background: #f8eedd;
  border: 2rpx solid #f3e3d3;
}

.detail-info {
  padding: 0 8rpx;
}

.detail-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #e09a5b;
  margin-bottom: 16rpx;
}

.detail-price {
  font-size: 36rpx;
  color: #e09a5b;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.detail-desc {
  font-size: 32rpx;
  color: #4a3c1a;
  line-height: 1.8;
  background: #fff7f0;
  border-radius: 12rpx;
  padding: 24rpx;
}